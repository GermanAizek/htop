#!/usr/bin/make -f

export DEB_BUILD_MAINT_OPTIONS = hardening=+all
DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/buildflags.mk

%:
	dh $@ --with autoreconf

override_dh_auto_configure:
	dh_auto_configure -- \
		--enable-linux-affinity \
		--enable-taskstats \
		--enable-openvz \
		--enable-vserver \
		--enable-cgroup \
		--enable-unicode
